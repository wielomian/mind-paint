<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.shape.*?>
<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.canvas.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.wielomian.mind_paint.controller.Controller">
    <top>
        <VBox BorderPane.alignment="CENTER">
            <children>
                <MenuBar>
                    <menus>
                        <Menu mnemonicParsing="false" text="File">
                            <items>
                                <MenuItem mnemonicParsing="false" text="Close" />
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Settings">
                            <items>
                                <MenuItem mnemonicParsing="false" onAction="#onSettingsMenuSelected" text="Global" />
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Help">
                            <items>
                                <MenuItem mnemonicParsing="false" text="About" />
                            </items>
                        </Menu>
                    </menus>
                </MenuBar>
                <ToolBar prefHeight="40.0" prefWidth="200.0">
                    <items>
                        <Button fx:id="paintOnOff" mnemonicParsing="false" onAction="#onPaintOnOffClicked" text="Start" />
                  <Button fx:id="pointersOnOff" mnemonicParsing="false" onAction="#onShowHidePointersClicked" text="Show pointers" />
                        <Separator orientation="VERTICAL" />
                        <Button mnemonicParsing="false" onAction="#onClearButtonCLicked" text="Clear" />
                    </items>
                    <padding>
                        <Insets left="10.0" right="20.0" />
                    </padding>
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                </ToolBar>
            </children>
        </VBox>
    </top>
    <center>
        <AnchorPane fx:id="picturePane" maxHeight="378.0" maxWidth="602.0" style="-fx-border-style: solid inside;" BorderPane.alignment="CENTER">
            <children>
                <Canvas fx:id="canvas" height="376.0" layoutX="1.0" layoutY="1.0" width="600.0" />
            </children>
        </AnchorPane>
    </center>
    <left>
        <ToolBar orientation="VERTICAL" prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <items>
                <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="17.0" prefWidth="198.0" text="Sensitivity" textAlignment="CENTER" />
                <Separator />
                <GridPane>
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <Label text="Brightness:" GridPane.rowIndex="1" />
                        <Label text="Hue" GridPane.rowIndex="2" />
                        <Label text="Saturation" GridPane.rowIndex="3" />
                        <Slider fx:id="brightnessSlider" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <Slider fx:id="hueSlider" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        <Slider fx:id="saturationSlider" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                        <Label text="Pointer:" />
                        <Label fx:id="pointerName" text="None" GridPane.columnIndex="1" />
                    </children>
                </GridPane>
                <Separator />
            <Pane prefHeight="280.0" prefWidth="200.0" />
            <Button fx:id="connectionStatus" mnemonicParsing="false" onAction="#onConnectionStatusButtonClicked" text="MindWave Connection">
               <graphic>
                  <Ellipse fx:id="connectionEllipse" fill="DODGERBLUE" radiusX="10.0" radiusY="10.0" strokeType="INSIDE" />
               </graphic>
            </Button>
            </items>
        </ToolBar>
    </left>
</BorderPane>
