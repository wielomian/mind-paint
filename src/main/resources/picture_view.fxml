<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.github.wielomian.mind_paint.Controller">
    <top>
        <VBox BorderPane.alignment="CENTER">
            <children>
                <MenuBar>
                    <menus>
                        <Menu mnemonicParsing="false" text="File">
                            <items>
                                <MenuItem mnemonicParsing="false" text="Close"/>
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Edit">
                            <items>
                                <MenuItem mnemonicParsing="false" text="Delete"/>
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Help">
                            <items>
                                <MenuItem mnemonicParsing="false" text="About"/>
                            </items>
                        </Menu>
                    </menus>
                </MenuBar>
                <ToolBar prefHeight="40.0" prefWidth="200.0">
                    <items>
                        <Button fx:id="paintOnOff" mnemonicParsing="false" onAction="#onPaintOnOffClicked"
                                text="Start"/>
                        <Separator orientation="VERTICAL"/>
                        <Button mnemonicParsing="false" text="Clear" onAction="#onClearButtonCLicked"/>
                    </items>
                    <padding>
                        <Insets left="10.0" right="20.0"/>
                    </padding>
                    <VBox.margin>
                        <Insets/>
                    </VBox.margin>
                </ToolBar>
            </children>
        </VBox>
    </top>
    <center>
        <Pane maxHeight="376.0" maxWidth="600.0" style="-fx-border-style: solid inside;" BorderPane.alignment="CENTER">
            <children>
                <Canvas fx:id="canvas" height="376.0" width="600.0"/>
            </children>
        </Pane>
    </center>
    <left>
        <ToolBar orientation="VERTICAL" prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <items>
                <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="17.0" prefWidth="198.0" text="Sensitivity"
                       textAlignment="CENTER"/>
                <Separator/>
                <GridPane>
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <Label text="Color:" GridPane.rowIndex="1"/>
                        <Label text="Label" GridPane.rowIndex="2"/>
                        <Label text="Label" GridPane.rowIndex="3"/>
                        <Slider GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                        <Slider GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                        <Slider GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                        <Label text="Pointer:"/>
                        <Label text="Label" GridPane.columnIndex="1"/>
                    </children>
                </GridPane>
                <Separator/>
            </items>
        </ToolBar>
    </left>
</BorderPane>
